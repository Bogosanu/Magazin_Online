
@{
    ViewBag.Title = "Index";
}
<br />


@if (ViewBag.esteAdmin)
{

    @if (ViewBag.showUnapprovedProducts)
    {
        <h2 class="text-center">Produse care asteapta aprobarea: </h2>

        <br />


        <div class="container">
            <div class="row">
                @foreach (Calgos.Models.Product product in ViewBag.unapprovedProducts)
                {
                    <div class="col-md-4">
                        <div class="card" style="width: 18rem;">

                            @Html.Partial("ProductInfo_Display", product)
                            <a href="/products/approve/@product.Id"><button>aprobă produsul</button></a>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
}


<h2 class="text-center">Produse disponibile: </h2>

<br />

@if (TempData["message"] != null)
{
    <div class="alert @ViewBag.Alert p-3 rounded-3 text-center mb-5">
        @ViewBag.Message
    </div>
}

<br />


<div class="container">
    <div class="row">
        @foreach (Calgos.Models.Product product in ViewBag.approvedProducts)
        {
                <div class="col-md-4"> 
                    <div class="card" style="width: 18rem;">
                    @Html.Partial("ProductInfo", product)
                    </div>
                </div>
        }
    </div>
</div>


